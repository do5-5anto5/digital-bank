<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.DigitalBank" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_default</item>
        <item name="colorPrimaryVariant">@color/color_text_hint</item>
        <item name="android:windowBackground">@color/color_default</item>
    </style>

    <style name="Theme.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="editLoginTextStyle">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
        <item name="android:textColor">@color/color_default</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/color_default</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintStart_toEndOf">parent</item>
    </style>

    <style name="editRegisterTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/bg_edit_text_around</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/color_default</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/color_default</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
    </style>

    <style name="txtRegisterLabels">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/color_default</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_default</item>
    </style>

    <style name="SearchViewWhiteTheme">
        <item name="colorSecondary">@color/white</item>
        <item name="searchBackground">@drawable/bg_search</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="hintColor">@color/white</item>
        <item name="backIconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconsTint">@color/white</item>
    </style>

    <style name="Theme.DigitalBank" parent="Base.Theme.DigitalBank" />
</resources>